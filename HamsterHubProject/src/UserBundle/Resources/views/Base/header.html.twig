                {% if ((is_granted("IS_AUTHENTICATED_REMEMBERED")) or (is_granted("IS_AUTHENTICATED_FULLY"))) %}
                    <li><a href="/profile/show/{{ app.user.username|lower }}"><img class="menuImage" src="{{ asset('assets/images/websiteImages/profile.svg') }}" alt="Profile"><span class="textMenu">Profile</span></a></li>
                    <li><a href="/logout"><img class="menuImage" src="{{ asset('assets/images/websiteImages/logout.svg') }}" alt="Logout"><span class="textMenu">Logout</span></a></li>
                {% endif %}
            </ul>
        </div>
    </nav>
