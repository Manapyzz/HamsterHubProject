<header>
    <nav id='menu'>
        <div class="title">
            <h1><a href="/">HAMSTERHUB</a></h1>
        </div>
        <div>
            <ul>
                <li><a href="/"><img class="menuImage" src="{{ asset('assets/images/websiteImages/home-icon.svg') }}" alt="home"><span class="textMenu">Home</span></a></li>
                {% if app.user == false %}
                    <li><a href="/login"><img class="menuImage" src="{{ asset('assets/images/websiteImages/login.svg')}}" alt="login"><span class="textMenu">Login</span></a></li>
                    <li><a href="/register"><img class="menuImage" src="{{ asset('assets/images/websiteImages/signIn.svg') }}" alt="SignUp"><span class="textMenu">Sign Up</span></a></li>
