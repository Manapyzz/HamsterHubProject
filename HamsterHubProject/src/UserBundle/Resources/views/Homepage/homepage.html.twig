
{% extends 'UserBundle:Base:homepage.html.twig' %}

{% block container %}
        {{ errors }}
            <div class="videoList">
                    {% for item in videos %}
                    <div class="postVideo">
                        <h4>{{ item.name }}</h4>
                        <a href="/video/show/{{ item.youtubeId }}">
                            <img src="{{ item.preview }}" alt="{{ item.name }}">
                        </a>
                        <br><br>
                        Posted By <span class="postedUser"><a href="/profile/show/{{ item.username|lower }}">{{ item.username }}</a></span>
                    </div>
                    {% endfor %}
            </div><br>
            <div class="loginPopUp">
                <div class="modalPopUp">
                    <a class="close" href="#">&times;</a>
                    {% render url('fos_user_security_login') %}
                </div>
            </div>
            <div class="registerPopUp">
                <div class="modalPopUp">
                    <a class="closeRegister" href="#">&times;</a>
                    {% render url('fos_user_registration_register') %}
                </div>
            </div>
{% endblock %}




